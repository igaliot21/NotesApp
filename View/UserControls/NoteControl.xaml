<UserControl x:Class="NotesApp.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel Margin="20">
        <TextBlock x:Name="txtTitle" Text="note title" FontSize="15" FontWeight="Bold"/>
        <TextBlock x:Name="txtEdited" Text="19 minutes" FontSize="12" Margin="0 10 0 0" Foreground="DodgerBlue" />
        <TextBlock x:Name="txtContent" Text="asdfasdfasfasfdas" Foreground="DarkGray" Margin="0 5 0 0" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
